    "migrate": "dotenv -- tsx db/migrate.ts",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.20.17",
    "drizzle-orm": "^0.30.10",
    "next": "14.2.3",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "pg": "^8.11.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.9.1",
    "typescript": "^5"
  }
}